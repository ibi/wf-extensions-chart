{
  "info": {
    "version": "1.1",
	//1.0 Original Release
  //1.0.1 Fix: CHART-3191 Error Messages
  //1.1 upgrade to d3 v5
    "implements_api_version": 1.0,
    "author": "Information Builders",
    "copyright": "Information Builders Inc.",
    "url": "https://github.com/ibi/wf-extensions-chart/tree/master/com.ibi.map.world",
    "icons": {
      "medium": "icons/medium.png"
    }
  },
  
  "properties": {
    "countries": {
      "exclude": ["Antarctica"],
      "defaultColor": "lightgrey",
      "borders": {
        "color": "black",
        "width": 1
      }
    },
    "colorScale": {
      "range": ['#d7ebef', '#4a89db']
    },
    "choropleth": {
      "border": {
        "color": "black",
        "width": 1 
      }
    },
    "bubbles": {
      "border": {
        "color": "black",
        "width": 1 
      },
      "labels": {
        "enabled": false,
        "format": "auto",
        "color": "black",
	"fontFamily": "sans-serif",
	"fontWeight": "bolder",
	"toBubbleSizeRatio": 0.5	
      },
      "defaultColor": "auto",
      "bubbleSizeRange": [7, 20]
    },
    "colorLegend": {
      "enabled": true,
      "background": {
        "color": 'none'
      },
      "border": {
        "color": 'black',
        "width": 1,
        "round": 2
      },
      "title": {
        "font": '16px serif',
        "color": 'black'
      },
      "rows": {
        "count": 'auto',
        "labels": {
          "font": '10px serif',
          "color": 'black',
          "format": 'auto'
        }
      }
    },
    "sizeLegend": {
      "enabled": true,
      "background": {
        "color": 'none'
      },
      "border": {
        "color": 'black',
        "width": 1,
        "round": 2
      },
      "title": {
        "font": '16px serif',
        "color": 'black'
      },
      "rows": {
        "count": 'auto',
        "labels": {
          "font": '10px serif',
          "color": 'black',
          "format": 'auto'
        }
      }
    }
  },
  
  "propertyAnnotations": {
    "countries": {
      "exclude": {
        "typeAnnotation": "array",
        "arrayTypes": "str"
      },
      "defaultColor": "color",
      "borders": {
        "color": "color",
        "width": "number"
      }
    },
    "colorScale": {
      "range": {
        "typeAnnotation": "array",
        "arrayTypes": "color"
      }
    },

    "choropleth": {
      "border": {
        "color": "color",
        "width": "number" 
      }
    },

    "bubbles": {
      "border": {
        "color": "color",
        "width": "number" 
      },
      "labels": {
        "enabled": "bool",
        "format": "str",
        "color": {
          "typeAnnotation": "type",
          "typeValues": ["color", "str"],
          "stringValues": ["auto"]
        },
	"fontFamily": "str",
	"fontWeight": "str",
	"toBubbleSizeRatio": "number"
      },
      "defaultColor": {
        "typeAnnotation": "type",
        "typeValues": ["color", "str"],
        "stringValues": ["auto"]
      },
      "bubbleSizeRange": {
          "typeAnnotation": "array",
          "arrayTypes": "number"
      }
    },

    "colorLegend": {
      "enabled": "bool",
      "background": {
        "color": {
          "typeAnnotation": "type",
          "typeValues": ["color", "str"],
          "stringValues": ["none"]
        }
      },
      "border": {
        "color": "color",
        "width": "number",
        "round": "number"
      },
      "title": {
        "font": "str",
        "color": "color"
      },
      "rows": {
        "count": {
          "typeAnnotation": "type",
          "typeValues": ["number", "str"],
          "stringValues": ["auto"]
        },
        "labels": {
          "font": "str",
          "color": "str",
          "format": "str"
        }
      }
    },
    "sizeLegend": {
      "enabled": "bool",
      "background": {
        "color": {
          "typeAnnotation": "type",
          "typeValues": ["color", "str"],
          "stringValues": ["none"]
        }
      },
      "border": {
        "color": "color",
        "width": "number",
        "round": "number"
      },
      "title": {
        "font": "str",
        "color": "color"
      },
      "rows": {
        "count": {
          "typeAnnotation": "type",
          "typeValues": ["number", "str"],
          "stringValues": ["auto"]
        },
        "labels": {
          "font": "str",
          "color": "color",
          "format": "str"
        }
      }
    }
  },
  
  "dataBuckets": {
    "tooltip": true,
    "matrix": false,
    "data_page": false,
    "series_break": false,

    "buckets": [
      {
        "id": "value",
        "type": "measure",
        "count": {
          "min": 1,
          "max": 99
        }
      },
      {
        "id": "name",
        "type": "dimension",
        "count": {
          "min": 0,
          "max": 1
        }
      },
      {
        "id": "longitude",
        "type": "both",
        "count": {
          "min": 0,
          "max": 1
        }
      },
      { 
        "id": "latitude",
        "type": "both",
        "count": {
          "min": 0,
          "max": 1
        }
      }
    ]
  },

  "translations": {
    "en": {
      "name": "World Choropleth & Bubble Map",
      "description": " World map extension that can be used as choropleth map or bubble map.",
      "icon_tooltip": "World Choropleth & Bubble Map",

      "name_name": "Name (DIM)",
      "name_tooltip": "Drop a dimension here",

      "longitude_name": "Longitude (DIM, MES)",
      "longitude_tooltip": "Drop a dimension or measure here",
      
      "latitude_name": "Latitude (DIM, MES)",
      "latitude_tooltip": "Drop a dimension or measure here",

      "value_name": "Value (MES)",
      "value_tooltip": "Drop a measure here"
    }
  }
}
