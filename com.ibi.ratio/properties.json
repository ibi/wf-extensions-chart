
{
  "info": {
    "version": 1.0,
    "implements_api_version": 1.0,
    "author": "Cloud Software Group, Inc.",
    "copyright": "Cloud Software Group, Inc.",
    "url": "https://github.com/ibi/wf-extensions-chart/tree/master/com.ibi.ratio",
    "icons": {
      "medium": "icons/medium.png"
    }
  },

  "properties": {
    "risers": {
      "color": "lightblue",
      "useMoonbeamColorSeries": false,
      "label": {
        "font": "20px sans-serif",
        "format": "auto",
		"color": "null"
      }
    },
    "axes": {
      "category": {
        "labels": {
          "align": "left",
          "font": "20px sans-serif",
          "color": "black"
        },
        "grid": {
          "stroke-dasharray" : "2 5",
          "width": 1,
          "color": "black"
        }
      },
      "ratio": {
        "labels": {
		  "visible": false,
          "font": "20px sans-serif",
          "color": "black"
        },
        "base": {
		  "visible": false,
          "color": "black"
        }
      }
    },
    "toolTip": {
      "enabled": true
    }
  },

  "propertyAnnotations": {
    "risers": {
      "color": "color",
      "useMoonbeamColorSeries": "bool",
      "label": {
        "font": "str",
        "format": "str",
		"color": "str"
      }
    },
    "axes": {
      "category": {
        "labels": {
          "align": "str",
          "font" : "str",
          "color" : "color"
        },
        "grid": {
          "stroke-dasharray" : "str",
          "width": "number",
          "color": "color"
        }
      },
      "ratio": {
        "labels": {
		  "visible": "bool",
          "font": "str",
          "color": "color"
        },
        "base": {
		  "visible": "bool",
          "color": "color"
        }
      }
    },
    "toolTip": {
      "enabled": "bool"
    }
  },

  "dataBuckets":  {
    "tooltip": false,
    "matrix": false,
    "data_page": false,
    "series_break": false,

    "buckets": [
      {
        "id": "x",
        "type": "dimension",
        "count": {
          "min": 1,
          "max": 1
        }
      },
      {
        "id": "y",
        "type": "measure",
        "count": {
          "min": 1,
          "max": 1
        }
      }
    ]
  },

  "translations": {
    "en": {
      "name": "Ratio Chart",
      "description": "This extension helps to compare ratios of different categories.",
      "icon_tooltip": "Ratio Chart.",
      "x_name": "Category (DIM)",
      "x_tooltip": "Drop a dimension here",
      "y_name": "Value (MES)",
      "y_tooltip": "Drop a measure here"
    }
  }
}
