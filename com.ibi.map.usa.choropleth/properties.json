			"medium": "icons/medium.png"
		}
	},
	
	"properties": {
        "states": {
            "exclude": [],
            "colorRange": ["#d7ebef", "#4a89db"],
            "defaultColor": "lightgrey",
            "borders": {
                "color": "black",
                "width": 1
            }
        },
        "colorLegend": {
            "enabled": true,
            "background": {
                "color": "none"
            },
            "border": {
                "color": "black",
                "width": 1,
                "round": 2
            },
            "title": {
                "font": "16px serif",
                "color": "black"
            },
            "rows": {
                "count": "auto",
                "labels": {
                    "font": "10px serif",
                    "color": "black",
                    "format": "auto"
                }
            }
        }
	},
	
	"propertyAnnotations": {
		"states": {
            "exclude": {
				"typeAnnotation": "array",
				"arrayTypes": "str"
			},
            "colorRange": {
				"typeAnnotation": "array",
				"arrayTypes": "color"
			},
            "defaultColor": "color",
            "borders": {
                "color": "color",
                "width": "number"
            }
        },
        "colorLegend": {
            "enabled": "bool",
            "background": {
                "color": "str"
            },
            "border": {
                "color": "str",
                "width": "number",
                "round": "number"
            },
            "title": {
                "font": "str",
                "color": "color"
            },
            "rows": {
                "count": {
					"typeAnnotation": "type",
					"typeValues": ["number", "str"],
					"stringValues": ["auto"]
				},
                "labels": {
                    "font": "str",
                    "color": "color",
                    "format": "str"
                }
            }
        }
	},
	
	"dataBuckets":  {
		"matrix": false,
		"data_page": false,
		"series_break": false,
		"tooltip": true,
		"buckets": [
	      {
	        "id": "state",
	        "type": "dimension",
	        "count": {
	          "min": 1,
	          "max": 1
	        }
	      },
	      {
	        "id": "value",
	        "type": "measure",
	        "count": {
	          "min": 0,
	          "max": 1
	        }
	      }
	    ],	
	},

	"translations": {
