			"color": "steelblue"
		},
		"xaxis": {
			"labels": {
				"format": "auto",
				"font": "12px sans-serif",
				"color": "black"
			}
		},
		"yaxis": {
			"title": {
				"font": "24px sans-serif",
				"color": "black"
			},
			"labels": {
				"format": "auto",
				"font": "12px sans-serif",
				"color": "black"
			}
		},
		"tooltips": {
			"enabled": true
		}
	},

