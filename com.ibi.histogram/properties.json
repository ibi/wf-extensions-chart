		"tooltip": false,
		"matrix": false,
		"data_page": false,
		"series_break": false,
		"buckets": [
	      {
	        "id": "value",
	        "type": "measure",
	        "count": {
	          "min": 1,
	          "max": 1
	        }
	      }
	    ]
	},

	"translations": {
		"en": {
			"name": "Histogram Chart",
			"description": "This extension helps to graphically represent the distribution of numerical data",
			"icon_tooltip": "Histogram Chart.",
