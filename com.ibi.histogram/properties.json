		"xaxis": {
			"labels": {
				"format": "str",
				"font": "str",
				"color": "color"
			}
		},
		"yaxis": {
			"title": {
				"font": "str",
				"color": "color"
			},
			"labels": {
				"format": "str",
				"font": "str",
				"color": "color"
			}
		},
		"tooltips": {
			"enabled": "bool"
		}
	},

