		"url": "https://github.com/ibi/wf-extensions-chart/tree/master/hexbinscatter",
		"icons": {
			"medium": "icons/medium.png"
		}
	},

	"properties": {
		"circles": {
			"hide": false,
			"radius": 3,
			"opacity": 0.8,
			"color": "#849eb2"
		},
		"hexbin": {
			"mesh": false,
			"radius": 20,
			"colors": ["red", "yellow", "green"]
		},
		"colorLegend": {
            "enabled": true,
            "background": {
                "color": "none"
            },
            "border": {
                "color": "black",
                "width": 1,
                "round": 2
            },
            "title": {
                "font": "16px serif",
                "color": "black"
            },
            "rows": {
                "count": "auto",
                "labels": {
                    "font": "10px serif",
                    "color": "black",
                    "format": "auto"
                }
            }
        }
	},

	"propertyAnnotations": {
		"circles": {
			"hide": "bool",
			"radius": "number",
			"opacity": "number",
			"color": "color"
		},
		"hexbin": {
			"mesh": "bool",
			"radius": "number",
			"colors": {
				"typeAnnotation": "array",
				"arrayTypes": "str"
			}
		},
		"colorLegend": {
            "enabled": "bool",
            "background": {
                "color": "str"
            },
            "border": {
                "color": "str",
                "width": "number",
                "round": "number"
            },
            "title": {
                "font": "str",
                "color": "color"
            },
            "rows": {
                "count": {
					"typeAnnotation": "type",
					"typeValues": ["number", "str"],
					"stringValues": ["auto"]
				},
                "labels": {
                    "font": "str",
                    "color": "color",
                    "format": "str"
                }
            }
        }
	},

	"dataBuckets":  {

		"tooltip": false,
		"matrix": false,
		"data_page": false,
		"series_break": false,

		"buckets": [
			{
				"id": "x",
				"type": "measure",
				"count": {
					"min": 1,
					"max": 1
				}
			},
			{
				"id": "y",
				"type": "measure",
				"count": {
					"min": 1,
					"max": 1
				}
			},
			{
				"id": "detail",
				"type": "dimension",
				"count": {
					"min": 0,
					"max": 5
				}
			},
			{
				"id": "aggregate",
				"type": "measure",
				"count": {
					"min": 0,
					"max": 1
				}
			}
		]
	},

	"translations": {
		"en": {
			"name": "Hexagon Bin Scatter Chart",
			"description": "Scatter chart with hexagon bins in the background, that color code aggregated value calculated from all the circles in the bin.",
			"icon_tooltip": "This extension utilizes hexagons that change colors depending on aggregated value calculated from all the circles in the bin. If value is not specified hexagon is color coded by the number of circles in it.",
			"x_name": "X Axis (MES)",
			"x_tooltip": "Drop a measure here",
			"y_name": "Y Axis (MES)",
			"y_tooltip": "Drop a measure here",
			"detail_name": "Detail (DIM)",
			"detail_tooltip": "Drop a dimension here",
			"aggregate_name": "Aggregate Value (MES)",
			"aggregate_tooltip": "Drop a measure here"
		}
